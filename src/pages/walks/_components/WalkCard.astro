---
import { type WalkData } from "./WalksList.astro";

interface Props {
	walk: WalkData;
}

const { walk } = Astro.props;

import { Image } from "astro:assets";
import { formatWalkDate } from "@lib/functions";
---

<div class="walk-card w-full bg-white p-4">
	<div class="-mx-4 flex flex-wrap items-center space-y-4 md:space-y-0">
		<div class="w-full px-4 md:w-4/12">
			<a href="#" class="block hover:opacity-75"
				><Image
					src={walk?.mapImage?.url}
					class="walk-card-image w-full rounded-sm shadow-md"
					alt={walk?.mapImage?.altText}
					width="350"
					height="240"
				/></a
			>
		</div>
		<div class="w-full px-4 md:w-8/12">
			<h3 class="font-heading text-cityscape-blue-500 walk-card-title my-4 text-xl font-bold leading-tight">
				Walk Number: <span class="text-sunset-orange-500">{walk?.walkNumber}</span>
			</h3>
			<p class="font-body text-cityscape-blue-500 walk-card-distance my-4 text-base">
				Distance Completed: <span class="font-semibold">{walk?.miles} mi</span>
			</p>
			<p class="text-cityscape-blue-500 walk-card-date mb-2 text-base font-body font-semibold leading-tight">
				{formatWalkDate(walk?.date)}
			</p>
